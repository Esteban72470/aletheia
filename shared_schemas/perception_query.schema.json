{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://aletheia.dev/schemas/perception_query.schema.json",
    "title": "Perception Query",
    "description": "Schema for querying parsed documents",
    "type": "object",
    "required": [
        "document_id"
    ],
    "properties": {
        "document_id": {
            "type": "string",
            "description": "ID of the document to query"
        },
        "query": {
            "type": "string",
            "description": "Natural language query"
        },
        "page_range": {
            "type": "array",
            "items": {
                "type": "integer"
            },
            "minItems": 2,
            "maxItems": 2,
            "description": "[start_page, end_page]"
        },
        "region": {
            "$ref": "#/definitions/BoundingBox",
            "description": "Specific region to query"
        },
        "output_format": {
            "type": "string",
            "enum": [
                "text",
                "structured",
                "summary",
                "json"
            ],
            "default": "structured"
        },
        "filters": {
            "type": "object",
            "properties": {
                "block_types": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "min_confidence": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                }
            }
        },
        "options": {
            "type": "object",
            "properties": {
                "include_bbox": {
                    "type": "boolean",
                    "default": true
                },
                "include_confidence": {
                    "type": "boolean",
                    "default": true
                },
                "max_results": {
                    "type": "integer",
                    "minimum": 1
                }
            }
        }
    },
    "definitions": {
        "BoundingBox": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "minItems": 4,
            "maxItems": 4
        }
    }
}
