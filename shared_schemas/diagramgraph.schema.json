{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://aletheia.dev/schemas/diagramgraph.schema.json",
    "title": "Diagram Graph",
    "description": "Schema for extracted diagram/flowchart structures",
    "type": "object",
    "required": [
        "diagram_id",
        "nodes"
    ],
    "properties": {
        "diagram_id": {
            "type": "string",
            "description": "Unique identifier for the diagram"
        },
        "source": {
            "type": "object",
            "properties": {
                "document_id": {
                    "type": "string"
                },
                "page_number": {
                    "type": "integer"
                },
                "bbox": {
                    "$ref": "#/definitions/BoundingBox"
                }
            }
        },
        "diagram_type": {
            "type": "string",
            "enum": [
                "flowchart",
                "sequence",
                "class",
                "architecture",
                "mindmap",
                "unknown"
            ],
            "description": "Detected diagram type"
        },
        "nodes": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/Node"
            }
        },
        "edges": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/Edge"
            }
        },
        "metadata": {
            "type": "object",
            "properties": {
                "confidence": {
                    "type": "number"
                },
                "extracted_at": {
                    "type": "string",
                    "format": "date-time"
                }
            }
        }
    },
    "definitions": {
        "Node": {
            "type": "object",
            "required": [
                "id"
            ],
            "properties": {
                "id": {
                    "type": "string"
                },
                "label": {
                    "type": "string"
                },
                "shape": {
                    "type": "string",
                    "enum": [
                        "rectangle",
                        "diamond",
                        "ellipse",
                        "parallelogram",
                        "cylinder",
                        "other"
                    ]
                },
                "bbox": {
                    "$ref": "#/definitions/BoundingBox"
                },
                "properties": {
                    "type": "object"
                }
            }
        },
        "Edge": {
            "type": "object",
            "required": [
                "source",
                "target"
            ],
            "properties": {
                "id": {
                    "type": "string"
                },
                "source": {
                    "type": "string"
                },
                "target": {
                    "type": "string"
                },
                "label": {
                    "type": "string"
                },
                "edge_type": {
                    "type": "string",
                    "enum": [
                        "directed",
                        "undirected",
                        "bidirectional",
                        "dashed"
                    ]
                }
            }
        },
        "BoundingBox": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "minItems": 4,
            "maxItems": 4
        }
    }
}
