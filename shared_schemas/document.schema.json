{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://aletheia.dev/schemas/document.schema.json",
    "title": "Aletheia Document",
    "description": "Schema for parsed document output",
    "type": "object",
    "required": [
        "document_id",
        "pages",
        "metadata"
    ],
    "properties": {
        "document_id": {
            "type": "string",
            "description": "Unique identifier for the parsed document"
        },
        "source": {
            "type": "object",
            "properties": {
                "filename": {
                    "type": "string"
                },
                "hash": {
                    "type": "string"
                },
                "mime_type": {
                    "type": "string"
                },
                "size_bytes": {
                    "type": "integer"
                }
            }
        },
        "pages": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/Page"
            }
        },
        "metadata": {
            "$ref": "#/definitions/Metadata"
        }
    },
    "definitions": {
        "Page": {
            "type": "object",
            "required": [
                "page_number",
                "width",
                "height"
            ],
            "properties": {
                "page_number": {
                    "type": "integer",
                    "minimum": 1
                },
                "width": {
                    "type": "number"
                },
                "height": {
                    "type": "number"
                },
                "blocks": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Block"
                    }
                },
                "tables": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Table"
                    }
                },
                "figures": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Figure"
                    }
                }
            }
        },
        "Block": {
            "type": "object",
            "required": [
                "id",
                "type",
                "bbox"
            ],
            "properties": {
                "id": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "paragraph",
                        "heading",
                        "list",
                        "caption",
                        "footer",
                        "other"
                    ]
                },
                "bbox": {
                    "$ref": "#/definitions/BoundingBox"
                },
                "text": {
                    "type": "string"
                },
                "confidence": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                }
            }
        },
        "Table": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "bbox": {
                    "$ref": "#/definitions/BoundingBox"
                },
                "rows": {
                    "type": "integer"
                },
                "columns": {
                    "type": "integer"
                },
                "cells": {
                    "type": "array"
                },
                "csv": {
                    "type": "string"
                }
            }
        },
        "Figure": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "bbox": {
                    "$ref": "#/definitions/BoundingBox"
                },
                "caption": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                }
            }
        },
        "BoundingBox": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "minItems": 4,
            "maxItems": 4,
            "description": "[x1, y1, x2, y2] coordinates"
        },
        "Metadata": {
            "type": "object",
            "properties": {
                "total_pages": {
                    "type": "integer"
                },
                "processing_time_ms": {
                    "type": "integer"
                },
                "ocr_engine": {
                    "type": "string"
                },
                "layout_model": {
                    "type": "string"
                },
                "created_at": {
                    "type": "string",
                    "format": "date-time"
                }
            }
        }
    }
}
